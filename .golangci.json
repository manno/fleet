{
  "issues": {
    "exclude-rules": [
      {
        "linters": ["dupl", "funlen", "gocyclo", "gosec"],
        "path": ".*_test.go$"
      },
      {
        "linters": ["gosec"],
        "path": "e2e"
      },
      {
        "linters": ["gosec"],
        "path": "integrationtests"
      },
      {
        "linters": ["gosec"],
        "path": "benchmarks"
      },
      {
        "path": "cmd/fleetcontroller/main.go",
        "text": "G108: Profiling endpoint is automatically exposed on /debug/pprof"
      },
      {
        "path": "cmd/fleetagent/main.go",
        "text": "G108: Profiling endpoint is automatically exposed on /debug/pprof"
      },
      {
        "path": "internal/cmd/agent/register/register.go",
        "text": "G107: Potential HTTP request made with variable url"
      },
      {
        "path": "internal/cmd",
        "text": "SA1019: workqueue.RateLimiter is deprecated"
      },
      {
        "linters": ["revive"],
        "path": "internal/cmd/agent/deployer/internal/"
      },
      {
        "linters": ["gosec"],
        "path": "internal/cmd/builder.go",
        "text": "G103:"
      },
      {
        "linters": ["gosec"],
        "path": "internal/cmd/cli/writer/writer.go",
        "text": "G301:"
      },
      {
        "linters": ["gosec"],
        "path": "internal/bundlereader/loaddirectory.go",
        "text": "G304:"
      },
      {
        "linters": ["gosec"],
        "path": "internal/cmd/controller/imagescan/",
        "text": "G304:"
      }
    ]
  },
  "formatters": {
    "enable": ["goimports"]
  },
  "linters": {
    "default": "none",
    "enable": [
      "dupl",
      "errcheck",
      "funlen",
      "ginkgolinter",
      "gocyclo",
      "gosec",
      "govet",
      "ineffassign",
      "misspell",
      "nakedret",
      "revive",
      "staticcheck",
      "unparam",
      "unused"
    ],
    "settings": {
      "funlen": {
        "lines": 270,
        "statements": 110
      },
      "revive": {
        "rules": [
          {
            "name": "blank-imports",
            "severity": "warning"
          },
          {
            "name": "unexported-return",
            "severity": "warning"
          }
        ]
      }
    }
  },
  "version": "2"
}
